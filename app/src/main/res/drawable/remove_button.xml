<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fffc0003"/>
            <stroke
                android:width="1dp"
                android:color="#ff990c16"/>
            <corners
                android:radius="1dp"/>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ffff3200"
                android:endColor="#ff990027"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#ff991e35"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"/>
        </shape>
    </item>
</selector>